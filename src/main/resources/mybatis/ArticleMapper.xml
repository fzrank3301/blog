<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.wang.blog.dao.ArticleMapper">

    <select id="getArticleById" parameterType="Integer" resultType="com.wang.blog.entity.ArticleEntity">
        select  *  from article  where id = #{id}
    </select>

    <select id="getAllArticle" resultType="com.wang.blog.entity.ArticleEntity">
        select  * from  article
    </select>

    <select id="findAll" resultType="com.wang.blog.entity.ArticleEntity">
        select * from  article
    </select>

</mapper>